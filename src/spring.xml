<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans default-init-method="myInit" default-destroy-method="cleanUp">
	<bean id="parenttriangle" class="com.spring.Triangle">
		<property name="points">
			<list>
				<ref bean="pointA" />
				<ref bean="pointB" />
			</list>
		</property>
	</bean>
	
	<bean id="triangle" class="com.spring.Triangle" parent="parenttriangle">
		<property name="points">
			<list merge="true">
				<ref bean="pointC" />
			</list>
		</property>
	</bean>
	
	<bean id="circle" class="com.spring.Circle">
		<property name="center" ref="pointA"></property>
	</bean>
	
	<bean id="pointA" class="com.spring.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>
	
	<bean id="pointB" class="com.spring.Point">
		<property name="x" value="3" />
		<property name="y" value="75" />
	</bean>
	
	<bean id="pointC" class="com.spring.Point">
		<property name="x" value="23" />
		<property name="y" value="6" />
	</bean>
</beans>	
